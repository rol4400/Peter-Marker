{
  "name": "peter-marker-desktop",
  "version": "1.1.6",
  "description": "Desktop annotation tool for Mac and Windows - draw over presentations and applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "prebuild:mac": "bash clean-mac-attrs.sh",
    "build:mac": "npm run prebuild:mac && electron-builder --mac --publish always",
    "build:win": "electron-builder --win --publish always",
    "build:all": "npm run prebuild:mac && electron-builder --mac --win --publish always",
    "build:mac:local": "npm run prebuild:mac && electron-builder --mac --publish never",
    "build:win:local": "electron-builder --win --publish never",
    "build:all:local": "npm run prebuild:mac && electron-builder --mac --win --publish never"
  },
  "keywords": [
    "annotation",
    "drawing",
    "presentation",
    "smartboard",
    "teaching"
  ],
  "author": "Peter Marker",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.petermarker.desktop",
    "productName": "Peter Marker",
    "publish": [
      {
        "provider": "github",
        "owner": "rol4400",
        "repo": "Peter-Marker"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "signIgnore": [
        "node_modules/electron-updater"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Peter Marker",
      "differentialPackage": true,
      "runAfterFinish": true
    },
    "files": [
      "main.js",
      "renderer.html",
      "renderer.js",
      "styles.css",
      "preload.js",
      "update-progress.html",
      "update-preload.js",
      "icons/**/*"
    ],
    "beforeBuild": "./build-scripts/beforeBuild.js",
    "afterAllArtifactBuild": "./build-scripts/afterPack.js"
  }
}
