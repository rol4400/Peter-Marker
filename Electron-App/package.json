{
  "name": "peter-marker-desktop",
  "version": "1.0.0",
  "description": "Desktop annotation tool for Mac and Windows - draw over presentations and applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [
    "annotation",
    "drawing",
    "presentation",
    "smartboard",
    "teaching"
  ],
  "author": "Peter Marker",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.petermarker.desktop",
    "productName": "Peter Marker",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Peter Marker"
    },
    "files": [
      "main.js",
      "renderer.html",
      "renderer.js",
      "styles.css",
      "preload.js",
      "icons/**/*"
    ]
  }
}
